<h1>Your Dashboard</h1>
<div class="dashboard-container">
  <a href="/create-post" class="new-post-btn">New Post</a>

  <div class="blog-post-container">
    {{#each blogs}}
      <div class="blog-post">
        <div class="post-header">
          <h3 class="post-title">
            <a href="/blog/{{this.id}}">{{this.title}}</a>
          </h3>
          <span class="post-date">{{format_date this.createdAt}}</span>
        </div>
        <!-- No post content here -->
      </div>
    {{/each}}
  </div>
</div>

<script src="/js/dashboard.js"></script>