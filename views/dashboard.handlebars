<h1>Your Dashboard</h1>
<div class="dashboard-container">
  <button class="new-post-btn">New Post</button>

  <!-- Form for creating a new post -->
  <form id="new-post-form" style="display: none;">
    <label for="post-title">Title:</label>
    <input type="text" id="post-title" name="title" required />

    <label for="post-content">Content:</label>
    <textarea id="post-content" name="content" required></textarea>

    <button type="submit" class="form-button">Create</button>
  </form>

  <!-- Form for editing an existing post -->
  <form id="edit-post-form" style="display: none;">
    <label for="edit-post-title">Title:</label>
    <input type="text" id="edit-post-title" name="title" required />

    <label for="edit-post-content">Content:</label>
    <textarea id="edit-post-content" name="content" required></textarea>

    <button type="submit" class="form-button" id="update-post-btn">Update Post</button>
    <button type="button" class="form-button" id="delete-post-btn">Delete Post</button>
  </form>

  <div class="blog-post-container">
    {{#each blogs}}
      <div class="blog-post">
        <div class="post-header">
          <h3 class="post-title">
            <a href="#" class="edit-post-link" data-id="{{this.id}}">{{this.title}}</a>
          </h3>
          <span class="post-date">{{format_date this.createdAt}}</span>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<script src="/js/dashboard.js"></script>
