<!-- Main container for the blog content, including the header and list of posts -->
<div class="blog-container">
  
  <!-- Header section of the card, styled with Bootstrap's 'col-md-10' class to control the width -->
  <div class="card-header col-md-10">
    <!-- Main heading for the blog section, indicating that this area shows recent posts -->
    <h2>
      Recent Posts
    </h2>
  </div>

  <!-- Container for the list of recent posts -->
  <div>
    <!-- Ordered list to display blog post items in a numbered format -->
    <ol>
      <!-- List item representing a single blog post -->
      <li>
        Item One
      </li>
    </ol>
  </div>
</div>
