<section class="container">
  <!-- Blog title -->
  <h1 class="blog-title">{{blog.title}}</h1> 
  <p class="blog-meta">
    <!-- Author name -->
    <span>By {{blog.author}}</span> 
    <!-- Post date -->
    <span>Posted on {{formatDate blog.createdAt}}</span> 
  </p>
  <article class="blog-content">
     <!-- Blog content -->
    {{{blog.content}}}
  </article>
</section>
