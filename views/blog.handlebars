<section class="container">
  <!-- Blog title -->
  <h1 class="blog-title">{{blog.title}}</h1>
  <p class="blog-meta">
    <span>By {{blog.author}}</span> |
    <span>Posted on {{format_date blog.createdAt}}</span>
  </p>

  <!-- Blog content -->
  <article class="blog-content">
    {{{blog.content}}}
  </article>

  <hr />

  <!-- Comment section -->
  <h3>Comments</h3>
  <ul id="comment-list">
    {{#each blog.comments}}
      <li>
        <strong>{{this.user.username}}</strong> on {{format_date this.createdAt}}:
        <p>{{this.comment_text}}</p>
      </li>
    {{/each}}
  </ul>

  {{#if loggedIn}}
  <form id="comment-form">
    <textarea id="comment-text" name="comment_text" required></textarea>
    <button type="submit">Submit Comment</button>
  </form>
  {{/if}}
</section>
