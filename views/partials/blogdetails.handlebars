<section class="container">
  <!-- Blog title -->
  <h1 class="blog-title">{{blog.title}}</h1> 
  <p class="blog-meta">
    <!-- Blog author -->
    <span>By {{blog.author}}</span> | 
    <!-- Blog post date -->
    <span>Posted on {{formatDate blog.createdAt}}</span> 
  </p>
  <article class="blog-content">
    <!-- Blog content -->
    {{{blog.content}}} 
  </article>

<!-- Blog JavaScript file -->
<script src="/js/blog.js"></script> 
