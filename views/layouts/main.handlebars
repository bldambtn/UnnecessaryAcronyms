<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>The Tech Blog</title>
    <link rel="stylesheet" href="style.css" />
  </head>

  <body>

    <header>
      <nav>
        <!-- Link to homepage -->
        <a href="/">Homepage</a>
        <!-- Placeholder for dashboard link -->
        <a href="/dashboard">Dashboard</a>
        {{#if loggedIn}}
          <!-- Logout link if logged in -->
          <a href="/logout">Logout</a>
        {{else}}
          <!-- Login link if not logged in -->
          <a href="/login">Login</a>
        {{/if}}
      </nav>
      <h1>The Tech Blog</h1>
    </header>

    <main class="container container-fluid mt-5">
      {{{body}}}
      {{#if loggedIn}}
        <!-- Load logout script if logged in -->
        <script src="/js/logout.js"></script>
      {{/if}}
    </main>

  </body>
</html>